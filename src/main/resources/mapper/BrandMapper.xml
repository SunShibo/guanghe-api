<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guanghe.api.dao.mallDao.BrandDao">

    <insert id="addBrand" parameterType="com.guanghe.api.entity.mallBo.BrandBo"
            useGeneratedKeys="true" keyProperty="id">
        insert into mall_brand SET  goods_type_id = #{goodsTypeId},,create_time = NOW()
        ,create_user = #{createUser},name=#{name},produced=#{produced}
    </insert>
    <update id="updateBrand" parameterType="com.guanghe.api.entity.mallBo.BrandBo">
        update mall_brand set name = #{name},produced=#{produced}
        ,update_time = now() where id = #{id}
    </update>
    <select id="queryBrandInfo" parameterType="int" resultType="com.guanghe.api.entity.mallBo.BrandBo">
        select * from mall_brand where goods_id = #{id}
    </select>
    <select id="queryBrand" parameterType="int" resultType="com.guanghe.api.entity.mallBo.BrandBo">
        select * from mall_brand WHERE id=#{id}
    </select>

    <delete id="deleteBrand" parameterType="int">
        delete from mall_brand where id = #{id}
    </delete>
    <select id="queryBrandOnclick" parameterType="int" resultType="com.guanghe.api.entity.mallBo.BrandBo">
        select b.namefrom mall_goods_type t,mall_brand bwhere t.id =b.goods_type_idand t.pid =#{id}
    </select>

</mapper>