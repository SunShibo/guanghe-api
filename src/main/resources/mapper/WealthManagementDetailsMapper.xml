<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guanghe.api.dao.WealthManagementDetailsDao">

    <select id="queryWealthManagementDetails" resultType="com.guanghe.api.entity.bo.WealthManagementDetailsBO">
        SELECT * FROM gh_wealth_management_details
    </select>

    <insert id="addWealthManagement" parameterType="com.guanghe.api.entity.bo.WealthManagementDetailsBO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gh_wealth_management_details
          (img_url,create_time)
          VALUES (#{imgUrl},NOW())

    </insert>
    <select id="queryWealthManagementwapList" resultType="com.guanghe.api.entity.bo.WealthManagementDetailsBO">
        SELECT * FROM gh_wealth_management_details WHERE status=2
    </select>
    <select id="queryWealthManagementwap" resultType="com.guanghe.api.entity.bo.WealthManagementDetailsBO">
        SELECT * FROM gh_wealth_management_details WHERE  status=1
    </select>
    <update id="updateWealthManagementbyId" parameterType="com.guanghe.api.entity.bo.WealthManagementDetailsBO">
        UPDATE gh_wealth_management_details  SET img_url = #{imgUrl},
        update_time = NOW()
    </update>
</mapper>